{
    "compilerOptions": {
        "experimentalDecorators": true,
        "allowJs": true,
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false,
        "sourceMap": true,
        "inlineSources": true,
        "moduleResolution": "node",
        "target": "es5",
        "preserveConstEnums": true,
        "allowSyntheticDefaultImports": true,
        "module": "es6",
        "lib": [
            "es2015",
            "dom"
        ]
    },
}